define host {
{% if target_inventory_hostname is defined %}
  host_name		{{ hostvars[target_inventory_hostname]['inventory_hostname'] }}
{% endif %}
{% for option in [ 
	'alias',
	'address',
	'max_check_attempts',
	'check_period',
	'contacts',
	'contact_groups',
	'notification_interval',
	'notification_period',
	'use',
	'display_name',
	'parents',
	'hourly_value',
	'name',
	'register',
	'check_command',
	'hostgroups' ] %}
{% if option in item.keys() %}
  {{ option }}		{{ item[option] }}
{% endif %}
{% endfor %}
}
